<!-- 구매자 -->  
<mapper namespace="Buy">

<!-- 내 후원내역 -->
<select id="myOrderList" parameterType="donzo.thefun.model.BuyDto" resultType="donzo.thefun.model.BuyDto">
		SELECT *
		FROM FUN_BUY_VIEW
		WHERE ID=#{id}
</select>

<!-- add Order -->
<insert id="addOrders" parameterType="donzo.thefun.model.BuyDto">
	INSERT INTO FUN_BUY *
	VALUES(SEQ_BUY.NEXTVAL,#{id},#{projectseq},#{optionseq},#{count},#{price},SYSDATE,
			null,null,#{name},#{phone},#{postcode},#{roadaddress},#{detailaddress})
</insert>

</mapper>